@page "/blocks/edit/{id:int}"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3>Edit</h3>

<FormComponent ButtonText="Update" OnValidSubmit="EditBlock" block="block" />

@code {
    [Parameter] public int id { get; set; }
    Block block = new Block();

    protected async override Task OnParametersSetAsync()
    {
        block = await _client.GetFromJsonAsync<Block>($"{Endpoints.BlocksEndpoint}/{id}");
    }
    async Task EditBlock()
    {
        await _client.PutAsJsonAsync($"{Endpoints.BlocksEndpoint}/{id}", block);
        _navManager.NavigateTo("/blocks/");
    }

}